<div class="container" id="blog_index">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h1>ブログ一覧</h1>
      <%= link_to "ブログを作成する", new_blog_path %>
    <% @blogs.each do |blog| %>
    <div class="row">
      <h4><strong><%= blog.title %></strong></h4>
      <p><%= blog.content %></p>
      <p class="posted_name"><i class="fa fa-user fa-lg icon_index">&nbsp;</i><%= blog.user.try(:name) || '名無し' %></p>
      <%= link_to "ブログを編集する", edit_blog_path(blog.id) %>
      <%= link_to "ブログを削除する", blog_path(blog), method: :delete, data: { confirm: '本当に編集していいですか？' } %>
    </div>
    <% end %>
  </div>
  <div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
  </div>
</div>
