<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
    <h2>パスワード変更</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <% ps_password = "新しいパスワード" %>
        <% if @minimum_password_length %>
          <% ps_password = "新しいパスワード（" + @minimum_password_length.to_s + "文字以内）"%>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: ps_password %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "新しいパスワード（確認用）" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを変更する", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
